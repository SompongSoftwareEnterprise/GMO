#!/bin/bash

. /vagrant/bashrc
set -e
cd /vagrant/gmo

step() {
	echo ""
	echo ">>> Resetting the database! <<<"
}

show() {
	set -e
	echo "[Run]" "$@"
	"$@"
}

step "Resetting the database..."
show php artisan migrate:refresh

step "Inserting test user..."
show gmo-load-fixtures login-data

step "Running tests...."
show gmo-test-casper all



